[Unit]
Description=Backyard Runner Laps Counter
[Service]
User=pi
Type=simple
TimeoutSec=0
ExecStart=/usr/local/bin/bird-watcher/bird-watcher.sh start
ExecStop=/usr/local/bin/bird-watcher/bird-watcher.sh stop
Restart=on-failure
RestartSec=5s
StandardOutput=syslog
StandardError=syslog
[Install]
WantedBy=default.target
